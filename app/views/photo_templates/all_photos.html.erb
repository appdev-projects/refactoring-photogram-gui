<h1>List of photos</h1>

<form action="/insert_photo_record">
  <label for="image_field">Image</label>
  <input id="image_field" type="text" name="query_image" placeholder="Enter a URL for the image...">

  <label for="caption_field">Caption</label>
  <textarea id="caption_field" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="user_id_field">Owner ID</label>
  <input id="user_id_field" type="text" name="query_owner_id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.image %>">
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= photo.poster.username %>
    </td>

    <td>
      <%= photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  
  <% end %>
</table>
